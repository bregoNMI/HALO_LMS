<div class="learner-name"><%- name %></div>
<div class="learner-username"><%- username %></div>
<div class="learner-email">
	<% if (!_(email).isEmpty()) { %>
	    <a href="mailto:<%- email %>">
	        <span class="fa fa-envelope-o" aria-hidden="true"></span>
	        <%- email %>
	    </a>
	<% } %>
</div>
